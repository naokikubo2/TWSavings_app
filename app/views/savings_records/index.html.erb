<div class="jumbotron bg-primary text-white">
  <h2>累計貯金額</h2>
  <h1>
    <%= @savings_records.all.sum(:earned_time) * current_user.hourly_pay / 60 %>円
  </h1>
  (本日の貯金+ <%= @savings_records.where(savings_date: Date.today).all.sum(:earned_time) * current_user.hourly_pay / 60 %> 円)
</div>

<div class="jumbotron bg-white">
  <h2>貯金履歴</h2>
  <% @savings_records.each do |savings_record| %>
    <div class="card mx-auto border-primary mb-3" style="max-width: 20rem;">
      <h3 class="card-header"><%= savings_record.earned_time * current_user.hourly_pay / 60 %>円</h3>
      <div class="card-body">
        <div class="card-text">
          <p>
            <%= savings_record.savings_name %>
            <% if (savings_record.earned_time).div(60)>0  %>
              <%= (savings_record.earned_time).div(60) %>時間
            <% end %>
            <% if savings_record.earned_time.modulo(60) != 0 %>
              <%= savings_record.earned_time.modulo(60) %>分</a>
            <% end %>
            <%= savings_record.savings_date %>
          </p>
          <%= link_to "削除", savings_record_path(savings_record), method: :delete, data: { confirm: "本当に削除しますか?" }, class: 'btn btn-outline-warning w-25' %>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>
